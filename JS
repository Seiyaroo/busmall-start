'use strict';

// global variabl
var allPictures = [];

var imgEl1 = document.getElementById('bag');
var h2El1 = document.getElementById('r2-d2');
var imgEl2 = document.getElementById('banana');
var h2El2 = document.getElementById('its a banana');
var picture1Index = 0;
var picture2Index = 1;


function Picture (src, name) {
this.url = src;
this.name = name;

this.clicked = 0;

allPictures.push(this);
}

imgEl1.addEventListener('click', function() {
picture1Index = Math.floor(Math.random() * allPictures.length)
imgEl1.src = allPictures[picture1Index].clicked++;
chooseNewPictures();
});


imgEl2.addEventListener('click', function() {
picture1Index = Math.floor(Math.random() * allPictures.length)
imgEl2.src = allPictures[picture2Index].clicked++;
chooseNewPictures();
})

function chooseNewPictures() {
picture1Index = Math.floor(Math.random() * allPictures.length)
imgEl1.src = allPictures[picture1Index].url;
picture2Index = Math.floor(Math.random() * allPictures.length)
imgEl2.src = allPictures[picture2Index].url;
}

































